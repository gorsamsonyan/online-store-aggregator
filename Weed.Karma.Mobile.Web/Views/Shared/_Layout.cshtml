            }
            getState(1, '@baseUrl');
        GetBestOffers();
            initRouting();
            initLeftMenuRouting();
        if ($("main").hasClass("mp-main")) {

            GetStoresByRegionForMap(localStorage.getItem("RegionAbbreviation"), '@baseUrl');
        }
        GetStoresByCityId(localStorage.getItem("RegionAbbreviation"), '@baseUrl');
        GetBrandsByCityId(localStorage.getItem("RegionAbbreviation"), '@baseUrl');
        if (localStorage.getItem("RegionAbbreviation") === null ||
            localStorage.getItem("RegionAbbreviation") == "null") {
            $("#choseRegionPopUp").show();
        } else {
            $("#bestOffer").html(localStorage.getItem("RegionName"));
            $("#choseRegionPopUp").hide();
