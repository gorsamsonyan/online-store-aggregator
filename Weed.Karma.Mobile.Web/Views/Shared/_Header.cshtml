        @if (User.Identity.IsAuthenticated)
        {
            <div class="sign-buttons">
                <div class="log-out-button sign-button-item"> @User.Identity.Name</div>
                <a href="registration-page.html" class="sign-in-button sign-button-item">PROFILE</a>
                <div class="log-out-button sign-button-item"> LOG OUT</div>
            </div>
        }
        else
        {
            <div class="sign-buttons">
