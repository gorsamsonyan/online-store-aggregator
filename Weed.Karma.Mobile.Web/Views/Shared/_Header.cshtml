                <a href="registration-page.html" class="sign-in-button sign-button-item">SIGN IN</a>
                <div class="log-out-button sign-button-item"> LOG OUT</div>
            </div>
        }
    </div>
</header>
<script>
    function YesClick() {

        if ($("#selectCity").val() != null && $("#selectState").val() != null) {
            var selectCityVal = $("#selectCity").val();
            var selectCityName = $("#selectCity option:selected").data("city-name");
            var selectCityId = $("#selectCity option:selected").data("city-id");
            localStorage.setItem("RegionAbbreviation", selectCityVal);
            localStorage.setItem("RegionName", selectCityName);
            localStorage.setItem("RegionId", selectCityId);
            $("#choseRegionPopUp").hide();
            $("#bestOffer").html(localStorage.getItem("RegionName"));
            GetBestOffers();
            initRouting();
            initLeftMenuRouting();
            GetStoresByCityId(localStorage.getItem("RegionAbbreviation"), '@baseUrl');
            GetBrandsByCityId(localStorage.getItem("RegionAbbreviation"), '@baseUrl');

        } else {
            $("#bestOffer").html(localStorage.getItem("RegionName"));


        }
    }
</script>
