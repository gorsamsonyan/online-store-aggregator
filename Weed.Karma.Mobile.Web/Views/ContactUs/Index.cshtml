                    <div class="col-lg-6 col-md-12">
                        <div class="contact-us-information-block">
                            <div class="title">Your Contact Information</div>
                            <div class="line"></div>


                            <form class="contact-information-form">
                                <div class="row">
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="form-item">
                                            <label for="firstNmae" class="form-item-label">First name*</label>
                                            <input type="text" id="firstNmae" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="form-item">
                                            <label for="phoneNumber" class="form-item-label">Phone Number*</label>
                                            <input type="text" id="phoneNumber" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="form-item">
                                            <label for="email" class="form-item-label">Email*</label>
                                            <input type="text" id="email" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="form-item">
                                            <label for="city" class="form-item-label">City*</label>
                                            <input type="text" id="city" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <div class="form-item">
                                            <label for="state" class="form-item-label">State*</label>
                                            <input type="text" id="state" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <div class="form-item">
                                            <label for="lastName" class="form-item-label">Last name*</label>
                                            <input type="text" id="lastName" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-sm-12">
                                        <div class="form-item">
                                            <label for="zipCode" class="form-item-label">Zip Code*</label>
                                            <input type="text" id="zipCode" required>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-sm-12 ">
                                        <div class="form-item">
                                            <label for="reasonContacting" class="form-item-label">Reason for contacting us*</label>
                                            <div class="rail-select">
                                                <div class="select-side">
                                                    <i class="fas fa-chevron-down"></i>
                                                </div>
                                                <select required>
                                                    <option id="reasonContacting" value="" hidden disabled selected>Corporate</option>
                                                    <option> Corporate</option>
                                                    <option> Corporate1</option>
                                                    <option> Corporate2</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-sm-12">
                                        <div class="form-item">
                                            <label for="comments" class="form-item-label">Comments</label>
                                            <textarea id="comments" type="text"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-sm-12 no-label">
                                        <div class="form-item submit-button-block">

                                            <input type="submit" value="Send">
                                        </div>
                                    </div>

                                </div>
