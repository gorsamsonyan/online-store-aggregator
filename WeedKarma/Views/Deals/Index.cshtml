@using Weed.Karma.Models.DealModels
@model DealsViewModel
@{
    int active = 0;
    int rightActive = 0;
    
}
<link rel="stylesheet" href="~/library/bootstrap/bootstrap.min.css" type="text/css">

<link rel="stylesheet" href="/css/pages/single-product.css" />
<link rel="stylesheet" href="/css/pages/deals.css" />
<link rel="stylesheet" href="~/css/responsive.css" />
<main class="wkPage--deal">
    <div class="container--medium dl-container">
        <!-- <div class="fx"> -->
        <div class="wkTitle fx">
            <h2 class="wkTitle__text deal-page-title">Deals of Los Angeles </h2>
            <span class="wkTitle__restLine"></span>
        </div>


        <div id="myCarousel" class="fx fx-between carousel slide myCarousel dl-carousel dl-header" data-interval="false" data-ride="carousel">
            <div class="dl-header__rightPart">
                <ul class="carousel-indicators dl-header__list">
                    @foreach (var item in Model.BestDeals)
                    {
                        string rightCarousel = rightActive == 0 ? " active " : " ";
                        <li data-target="#myCarousel" data-slide-to="@rightActive" class="dl-header__listItem @rightCarousel">
                            <div class="dl-header__listImg" style="background-image:url('@item.ImgSrc')">
                                @* <img src="@item.ImagePath" alt="" class="res-img">*@
                                @*<div src="@item.ImagePath" alt="" class="deel-lef-block-img" ></div>*@
                            </div>
                            <div class="dl-header__listInfo">
                                <h4 class="dl-header__listTitle">@item.ProductName</h4>
                                <h6 class="dl-header__listName">@item.Store.ShopName`</h6>
                                @*<div class="dl-header__listPrice">
                                    <img src="/img/product/1.png" alt="" /> <span>@item.Unit.CurrentPrice</span>
                                </div>*@
                            </div>
                        </li>
                        rightActive++;
                    }
                </ul>
            </div>
            <!-- Carousel items -->
            <div class="carousel-inner dl-header__lefPart">
                @foreach (var item in Model.BestDeals)
                {

                    string mainCarousel = active == 0 ? "active item" : "item";
                    <div class="@mainCarousel deal-product-item" data-product-id="@item.Id" data-store-id="@item.StoreId">
                        <figure class="dl-header__figure">
                            <div class="dl-header__img " style="background-image:url('@item.ImgSrc')"></div>
                            <figcaption class="dl-header__figcaption deal-product-name">
                                @item.ProductName
                            </figcaption>
                        </figure>
                        <div class="dl-header__infoPart fx fx-between">
                            <div class="dl-header__infoLeft fx">
                                <div  class="dl-header__infoLogo" style="background-image:url('@item.Store.LogoPath')"></div>
                                <div class="dl-header__info">
                                    <h5 class="dl-header__title"><a class="dl-header__title" href="/Store/Products/@item.Store.Id">@item.Store.ShopName</a></h5>
                                    <p class="dl-header__location">Los Angeles,LA</p>
                                </div>
                            </div>
                            <div class="dl-header__infoRight">
                                <a href="javascript:void(0)" class="dl-header__viewBtn deal-order-button" data-deal-item-price="@item.CurrentPrice">Deal</a>
                            </div>
                        </div>
                    </div>


                    active++;
                }



            </div>
        </div>
        <hr class="transition-timer-carousel-progress-bar" />
    </div>
    <!-- Slider END -->

    <section class="bg--lightBrown"></section>

    <div class="singleProduct__relatedContainer container--medium">
        <div class="singleProduct__relatedRow fx fx-wrap">
            <!-- Add to cart popup -->
            <div class="text-center fx fx-center-h addedToCart">
                <!-- <span class="addedToCart__text fx fx-center-v"><img src="/img/icons/added.png" alt="">Added to cart </span>
        <span class="addedToCart__tiangle"></span> -->
                <img src="/img/added.png" alt="Added To Cart Image" class="addedToCart__image">
            </div>
            <!-- Add to cart popup -->
            <!-- wk items -->
            <!-- wk items -->
            @foreach (var item in Model.Deals)
            {
                <div class="ss__product-item deal-product-item" data-product-id="@item.Id" data-store-id="@item.StoreId">
                    <div class="singleProduct__relatedItem">
                        <div class="ss-store__bgImage"
                             style="background-image: url('@item.ImgSrc');">
                            <!--<a href="javascript:void(0)" class="ss-store__info">-->
                            <!--&lt;!&ndash; <i class="fa fa-info ss-store__infoIcon" aria-hidden="true"></i> &ndash;&gt;-->
                            <!--i-->
                            <!--</a>-->


                        </div>
                        <!-- -- -->
                        <div class="ss-store__details text-center">
                            <div class="fx fx-between fx-center-v ss-store__selects">
                                <!-- <h4 class="singleProduct__name">Product Name</h4> -->
                                <div class="ss-store__selectWrapper fx fx-center">
                                    <div class="fx fx-wrap ss-store__variationsContainer">
                                        <a href="javascript:void(0)" class="ss-store__variation deal-product-name">
                                            @item.ProductName
                                        </a>

                                    </div>
                                    <!--<a href="javascrip:void(0)"  class="singleProduct__quantity"></a>-->
                                </div>
                            </div>
                            <div class="fx fx-between fx-center-v singleProduct__bottomRow">

                                <a href="javascript:void(0)"
                                   class="ss-store__orderBtn singleProduct__basket  deal-order-button" data-deal-item-price="@item.CurrentPrice">Claim</a>
                         
                            </div>
                          
                        </div>
                    </div>
                </div>
            }
            <!-- wk items end -->
            <!-- wk items end -->
        </div>
    </div>
</main>

