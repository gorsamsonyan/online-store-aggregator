<body onload="getState(1, '@baseUrl')">
    <div class="page-wrapper chiller-theme toggled">


        <!--header block-->
    @await Html.PartialAsync("_AdminHeader")
        <!--header block End-->

        

        <!--sidebar-wrapper-->

    @await Html.PartialAsync("_StoreAdminLeftMenu")


        <main class="page-content margin-top">

            <div class="container-fluid store-body">

                <h1 class="section-title">
                    Store Information
                </h1>

                <div class="body-section">
                <form method="post" id="storeInformation">
                <input type="hidden" name="LogoPath" id="LogoPath" value="" />
                <div class="container">

                <div class="row store-information justify-content-center">


                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-item">
                                <label for="shopName" class="form-item-label">Shop name*</label>
                                <input type="text" class="input-text" name="ShopName" id="shopName"
                                       placeholder="show in website"
                                       required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-item">
                                <label for="shop-legal-name" class="form-item-label">
                                    Shop legal
                                    name*
                                </label>
                                <input type="text" class="input-text" id="shop-legal-name"
                                       placeholder="Name LLC"
                                       required name="ShopLegalName">
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-12">

                            <div class="form-item">
                                <label for="productDescription" class="form-item-label">
                                    Description*
                                   
                                </label>
                                <textarea type="text" class="input-textarea" id="storeDescription"
                                          required name="Description"></textarea>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 no-label select-state">
                            <div class="form-item">
                                <div class="select-arrow"><i class="fas fa-angle-down"></i></div>
                                <label for="selectState"></label>
                                <select name="State" id="selectState">
                                    <option hidden disabled selected>State</option>


                                </select>

                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12  select-city">
                            <div class="form-item">

                                <div class="select-arrow"><i class="fas fa-angle-down"></i></div>
                                <label for="selectState"></label>
                                <select name="RegionId" id="selectCity">
                                    <option hidden disabled selected> Choose City</option>


                                </select>

                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 address">
                            <div class="form-item">
                                <label for="physicalAdress" class="form-item-label">
                                    Physical
                                    Adress*
                                </label>
                                <input type="text" class="input-text" id="physicalAdress" name="PhysicalAddress" required>
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-12 address">
                            <div class="form-item">
                                <label for="legalAdress" class="form-item-label">Legal Adress*</label>
                                <input type="text" class="input-text" id="legalAdress" name="LegalAddress" required>
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6">
                            <div class="form-item">
                                <label for="specifyWebsite" class="form-item-label">
                                    Specify
                                    Website
                                </label>
                                <input type="text" class="input-text" name="WebSite" id="specifyWebsite">
                            </div>
                        </div>


