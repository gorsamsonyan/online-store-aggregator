                <div class="col-lg-6 col-sm-12">
                <div class="row justify-content-center">
                <div class="col-lg-12 col-sm-12">
                    <div class="form-item">

                        <label for="workingHours" class="form-item-label label-center">
                            Working
                            Hours*
                        </label>
                        <div class="working-hourse-block">
                            <div class="from  ">
                                FROM
                                <div class="rail-select">
                                    <div class="select-arrow">
                                        <i class="fas fa-angle-down"></i>
                                    </div>
                                    <select id="workingHours" name="WorkingHoursFrom" class="input-select" required>
                                        <option   selected>
                                            08:00
                                        </option>
                                        <option>08:30</option>
                                        <option>09:00</option>
                                        <option>09:30</option>
                                        <option>10:00</option>
                                        <option>10:30</option>
                                        <option>11:00</option>
                                        <option>11:30</option>


                                    </select>
                                </div>
                            </div>
                            <div class="to   ">
                                TO
                                <div class="rail-select">
                                    <div class="select-arrow">
                                        <i class="fas fa-angle-down"></i>
                                    </div>
                                    <select class="input-select" required name="WorkingHoursTo">
                                        <option  selected>
                                            20:00
                                        </option>
                                        <option>20:30</option>
                                        <option>21:00</option>
                                        <option>21:30</option>
                                        <option>22:00</option>
                                        <option>22:30</option>
                                        <option>23:00</option>
                                        <option>23:30</option>
                                        <option>24:00</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-sm-12 weekend-block ">
                    <div class="form-item">
                        <label class="form-item-label label-center">Working days *</label>
                        <!--<div a>-->
                        <ul class="checkbox-block text-center">
                            <li>
                                <input type="checkbox" class="input-checkbox" name="Weekends"
                                       value="1" checked>Mo
                                <!--<span class="checked-button"></span>-->
                            </li>
                            <li>
                                <input type="checkbox" class="input-checkbox" name="Weekends"
                                       value="2" checked>Tu
                                <!--<span class="checked-button"></span>-->

                            </li>
                            <li>
                                <input type="checkbox" class="input-checkbox" name="Weekends"
                                       value="3" checked>We
                                <!--<span class="checked-button"></span>-->

                            </li>
                            <li>
                                <input type="checkbox" class="input-checkbox" name="Weekends"
                                       value="4" checked>Th
                            </li>
                            <li>
                                <input type="checkbox" class="input-checkbox" name="Weekends"
                                       value="5" checked>Fr
                            </li>
                            <li>
                                <input type="checkbox" class="input-checkbox" name="Weekends"
                                       value="6">Sa
                            </li>
                            <li>
                                <input type="checkbox" class="input-checkbox" name="Weekends"
                                       value="7">Su
                            </li>

                        </ul>
                        <!--</div>-->
                    </div>
                </div>

                <div class="col-lg-12 col-sm-12 justify-content-center">
                    <div class="form-item ">
                        <label class="form-item-label label-center">Delivery service</label>
                        <div class="delivery-block">
                            <label class="delivery-service">
                                <input type="radio" class="input-radio" name="delivery-service"
                                       
                                       value="yes"/>
                                <span class="delivery-service-button"></span>
                                <span class="">Yes</span>
                            </label>

                            <label class="delivery-service">
                                <input type="radio" class="input-radio" name="delivery-service"
                                       checked   value="no"/>
                                <span class="delivery-service-button"></span>
                                <span class="">No</span>
                            </label>
                        </div>
                    </div>
                </div>



                <div class="col-lg-12 col-sm-12 delivery-all-block ">
                    <div class="row">


                        <div class="col-lg-12 col-sm-12">
                            <div class="form-item">

                                <label for="deliveryTime" class="form-item-label label-center">
                                    Delivery
                                    Time*
                                </label>
                                <div class="working-hourse-block">
                                    <div class="from  ">
                                        FROM
                                        <div class="rail-select">
                                            <div class="select-arrow">
                                                <i class="fas fa-angle-down"></i>
                                            </div>
                                            <select id="deliveryTime" name="DeliveryTimeFrom" class="input-select" >
                                                <option selected>
                                                    08:00
                                                </option>
                                                <option>08:30</option>
                                                <option>09:00</option>
                                                <option>09:30</option>
                                                <option>10:00</option>
                                                <option>10:30</option>
                                                <option>11:00</option>
                                                <option>11:30</option>


                                            </select>
                                        </div>
                                    </div>
                                    <div class="to   ">
                                        TO
                                        <div class="rail-select">
                                            <div class="select-arrow">
                                                <i class="fas fa-angle-down"></i>
                                            </div>
                                            <select class="input-select" name="DeliveryTimeTo" >
                                                <option selected>
                                                    20:00
                                                </option>
                                                <option>20:30</option>
                                                <option>21:00</option>
                                                <option>21:30</option>
                                                <option>22:00</option>
                                                <option>22:30</option>
                                                <option>23:00</option>
                                                <option>23:30</option>
                                                <option>24:00</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 no-label">
                            <div class="form-item d-flex flex-row align-items-center justify-content-center">
                                <label class="d-flex align-items-center">
                                    <span class="delivery-all-block-text">MIN ORDER DELIVERY</span>
                                    <input class="input-text delivery-all-block-input " name="MinOrderDelivery" type="text">
                                </label>
                                <div class="delivery-all-block-price">USD</div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-12 no-label">
                            <div class="form-item d-flex flex-row align-items-center justify-content-center">
                                <label class="d-flex align-items-center">
                                    <span class="delivery-all-block-text">DELIVERY PRICE</span>
                                    <input class="input-text delivery-all-block-input " name="DeliveryPrice" type="text">
                                </label>
                                <div class="delivery-all-block-price">USD</div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12  no-label delivery-region-block">
                            <div class="form-item">

                                <div class="select-arrow"><i class="fas fa-angle-down"></i></div>
                                <label for="selectRegion">Choose Region*</label>
                                <select name="DeliveryRegionId" id="selectRegion" multiple>
                                    <option hidden disabled> Choose Regions</option>

                                </select>

                            </div>
                        </div>


                    </div>



                </div>


                <div class="col-lg-12 col-sm-12 no-label">
                    <div class="form-item">

                        <input type="submit" class="input-submit" value="Save">
                    </div>
                </div>


                </div>
                </div>


                </div>
                </div>

                </form>
                </div>
                <!-- Store info End-->
            </div>
        </main>
        <!--page-content"-->


    </div>

