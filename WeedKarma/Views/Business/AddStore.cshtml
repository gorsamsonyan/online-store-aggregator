                        <div class="col-lg-6 col-sm-6">
                            <div class="form-item">
                                <label for="taxnumber" class="form-item-label">Tax number*</label>
                                <input type="text" class="input-text" id="taxnumber" name="TaxNumber" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6">
                            <div class="form-item">
                                <label for="contactnumber" class="form-item-label">
