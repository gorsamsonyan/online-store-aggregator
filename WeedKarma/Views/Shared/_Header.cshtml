<div id="choseRegionPopUp">


    <div class="choseRegionPopUp-close">
        <i class="far fa-times-circle"></i>
    </div>
    <div class="choseRegion-header-block">

        <div class="chose-country-block">
            <div class="country-flag">
                <img src="~/img/flag/usa-flag.png" alt="">
            </div>
            <div class="country">USA</div>
            <i class="fas fa-angle-down"></i>
        </div>


    </div>
    <div class="choseRegion-body">

        <form method="POST" id="ChoseRegionForm">
            <h5></h5>
            <div class="form-item">
                <div class="select-arrow"><i class="fas fa-angle-down"></i></div>
                <label for="selectState"></label>
                <select name="" id="selectState" required="">
                    <option hidden disabled selected>State</option>



                </select>
            </div>
            <div class="form-item">
                <div class="select-arrow"><i class="fas fa-angle-down"></i></div>
                <label for="selectCity"></label>
                <select name="" id="selectCity" required="">
                    <option hidden disabled selected>City</option>
                </select>
            </div>

            <div class="your-age-answer">
                <!--<h2 class="slide__content__text-title">Weed Karma</h2>-->
                <p class="sub-title">Are you 21+ or a valid medical marijuana patient?</p>
            </div>
            <div class="your-age-question">
                <label>
                    <input type="radio" name="your-age" value="NO" />
                    <span class="your-age your-age-less">NO</span>
                </label>
                <label>
                    <input type="radio" name="your-age" value="YES" checked onclick="YesClick()" />
                    <span class=" your-age your-age-more">YES</span>
                </label>
            </div>
            <div class="i-agree-block">


                <div class="i-agree-block">

                    <label for="iAgree" class="i-agree-label">
                        <input id="iAgree" type="checkbox" checked name="" required>
                        <span class="i-agree-submit-button"></span>
                        <span class="i-agree-text">
                            Remember me for 30 days.
                            I confirm that this is not a shared device.
                        </span>
                    </label>

                </div>
            </div>


        </form>
        <div class="accessing-block">
            <p>
                By accessing this site, you accept the
                <a href="terms-of-use.html">
                    Terms of
                    Use
                </a>
                and <a href="privacy-policy.html">Privacy Policy</a>.
            </p>
        </div>
    </div>
</div>
