</main>

<script src="~/js/jquery-1.10.2.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $("#tst").change(function () {
            console.log($("#tst").val());
            var url = '@Url.Content("~/")' + "Product/getProduct";

            $.get(url, { parentId: $("#tst").val() }, function (data) {
                $("#ssss").empty();

                $("#ssss").append("<table>");

                $("#ssss").append("<tr>");
                $("#ssss").append("<th>ID</th>");
                $("#ssss").append("<th>ProductName</th>");
                $("#ssss").append("</tr>");
                $.each(data, function (i, getProduct) {
                    //$("#ssss").append("<div>'" +  +"|"+ getProduct.text + "</div>")




                    $("#ssss").append("<tr>");
                    $("#ssss").append("<td>"+getProduct.value+"</td>");
                    $("#ssss").append("<td>" + getProduct.text + "</td>");
                    $("#ssss").append("</tr>");



                });
                $("#ssss").append("</table>");

                $('#ssss table').addClass("ssss");
                $('#ssss table thead').addClass("ssssTh");
                $('#ssss table tbody td').addClass("ssssTd");
            });
        });
    });



</script>



