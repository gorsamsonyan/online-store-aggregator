@model storeadmin.Models.SCR.SCRData
<main class="page-content">

    <div class="container-fluid store-body">
       
        <form  method="post" id="storeInformation">
            <div class="container">

                <div class="row store-information justify-content-center">
                    <div class="col-lg-12 col-md-12">
                        <h2 class="store-information-title">
                            Store Information
                        </h2>
                    </div>

                    <div class="col-lg-6 col-md-12">
                        <div class="row justify-content-center">
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-item">
                                    <label for="shopName" class="form-item-label">Shop name*</label>
                                    <input type="text" id="shopName" placeholder="show in website"
                                           required>
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-12">
                                <div class="form-item">
                                    <label for="shop-legal-name" class="form-item-label">
                                        Shop legal
                                        name*
                                    </label>
                                    <input type="text" id="shop-legal-name" placeholder="Name LLC" required>
                                    @*<label asp-for="ShopName" class="control-label"></label>
                                    <input asp-for="ShopName" class="form-control" />
                                    <span asp-validation-for="ShopName" class="text-danger"></span>*@
                                </div>
                            </div>


                            <div class="col-lg-12 col-sm-12 no-label select-state">
                                <div class="form-item">
                                    <div class="rail-select">
                                        <div class="select-side">
                                            <i class="fas fa-chevron-down"></i>
                                        </div>
                                       @if (ViewBag.StateItems != null)
                                       {
                                           @Html.DropDownListFor(m=>m.StateID, ViewBag.StateItems as SelectList,"Select State",new { @class= "input-select"} )
                                       }
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 no-label select-city">
                                <div class="form-item">
                                    <div class="rail-select">
                                        <div class="select-side">
                                            <i class="fas fa-chevron-down"></i>
                                        </div>
                                            @Html.DropDownListFor(m => m.CityID, new SelectList(""), "Select City", new { @class = "selectCity" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 address">
                                <div class="form-item">
                                    <label for="physicalAdress" class="form-item-label">
                                        Physical
                                        Adress*
                                    </label>
                                    <input type="text" id="physicalAdress" required>
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 address">
                                <div class="form-item">
                                    <label for="legalAdress" class="form-item-label">Legal Adress*</label>
                                    <input type="text" id="legalAdress" required>
                                </div>
