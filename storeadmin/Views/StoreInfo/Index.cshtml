                                            <li><input type="checkbox" name="weekend" value="Friday">Fr</li>
                                            <li>
                                                <input type="checkbox" name="weekend" value="Saturday">Sa
                                            </li>
                                            <li><input type="checkbox" name="weekend" value="Sunday">Su</li>

                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-12">
                                <div class="form-item img-download-block">
